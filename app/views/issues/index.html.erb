<div class='side-button'>
  <h3>Issues</h3>
  <%= link_to new_user_project_issue_path, class: 'new-button' do %>
    <i class='bi bi-plus-circle-fill'></i>
    Add Issues
  <% end %>
</div>

<% if @issues.exists? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tracker</th>
          <th>Status</th>
          <th>Subject</th>
          <th>Category</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <td><%= issue.id %></td>
            <td><%= issue.tracker %></td>
            <td><%= issue.issue_status %></td>
            <td><%= link_to issue.subject, user_project_issue_path(
              user_id: current_user.id, project_id: issue.project.id,
              id: issue.id ) %></td>
            <td><%= issue.category %></td>
            <td><%= issue.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No Issues Yet!</p>
<% end %>
