<h3>My Page</h3>
<h5>Issues Assigned to me</h5>

<% unless @issues.empty? %>
  <div class='table-responsive'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Tracker</th>
          <th>Status</th>
          <th>Subject</th>
          <th>Category</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <td><%= issue.id %></td>
            <td><%= issue.tracker %></td>
            <td><% issue.issue_status.each do |label| %>
            <%= button_tag label[0], type: 'button', class: 'btn', style:
            "background-color: #{label[1]}; font-size: 12px; width: 60px;
            height: 30px; color: white;" %>
            <% end %></td>
            <td><%= link_to issue.subject, user_project_issue_path(
                  user_id: current_user.id, project_id: issue.project.id,
                  id: issue.id ) %></td>
            <td><%= issue.category %></td>
            <td><%= issue.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
