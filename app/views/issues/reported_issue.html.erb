<h3>My Page</h3>
<h5>Reported Issues</h5>
<% if @issues.exists?  %>
  <div class='table-responsive'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Tracker</th>
          <th>Status</th>
          <th>Subject</th>
          <th>Category</th>
          <th>Updated At</th>
        </tr>
      </thead>
      <tbody>
      <% @issues.each do |issue| %>
        <% issue.assignee.each do |assignee| %>
          <% next if assignee.blank? %>
          <% if assignee.to_i == current_user.id %>
            <tr>
              <td><%= issue.id %></td>
              <td><%= issue.tracker %></td>
              <td>
                <% issue.issue_status.each do |label| %>
                  <%= button_tag label[0], type: 'button', class: 'btn', style:
                  "background-color: #{label[1]}; font-size: 12px; width: 60px;
                  height: 30px; color: white;" %>
                <% end %>
              </td>
              <td><%= link_to issue.subject, user_project_issue_path(
                    user_id: current_user.id, project_id: issue.project.id,
                    id: issue.id ) %></td>
              <td><%= issue.category %></td>
              <td><%= issue.updated_at %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
