<strong><%= @news.news_title %></strong>
<p class='news-added'>Added by
<%= @news.news_added_by %>
<%= time_ago_in_words(@news.created_at) %> ago
</p>
<p><%= @news.news_content %></p>
<strong>Comment</strong>
<%= link_to 'Add a Comment', new_user_project_news_comment_path(
  user_id: current_user.id, project_id: @news.project.id, news_id: @news.id) %>
	<br />
	<br />

<% if @news.comments.exists? %>
  <% @news.comments.each do |comment| %>
    <p>Added by
		<%= comment.comment_added_by %>
		<%= time_ago_in_words(comment.created_at) %> ago
		</p>
		<p class='added-by'><%= comment.comment_body %>
		<hr />
	<% end %>
<% end %>
<%= form_with(model: @news.comments.new, url: user_project_news_comments_path(
  user_id: current_user.id, project_id: @news.project.id, news_id: @news.id),
	local: true) do |form| %>

	<div class='form-group'>
		<%= form.label :'Add a Comment' %>
		<%= form.text_area :comment_body, class: 'form-control' %>
	</div>
	<br />

	<%= form.hidden_field :project_id, value: @project.id %>
	<%= form.hidden_field :user_id, value: current_user.id %>
	<%= form.hidden_field :news_id, value: @news.id %>
	<%= form.hidden_field :comment_added_by, value: current_user.first_name %>

	<div class='actions'>
		<%= form.submit 'Save', class: 'btn btn-success' %>
	</div>

<% end %>