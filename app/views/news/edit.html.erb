<%= form_with(model: @news, url: user_project_news_path(
  user_id: current_user.id, project_id: @project, id: @news.id),
	local: true)do |form| %>

	<div class='form-group'>
		<%= form.label :news_title %>
		<%= form.text_field :news_title, value: @news.news_title,
			class: 'form-control' %>
	</div>
	<br />

	<div class='form-group'>
		<%= form.label :news_content %>
		<%= form.rich_text_area :news_content, value: @news.news_content,
		class: 'form-control' %>
	</div>
	<br />

	<%= form.hidden_field :project_id, value: @project.id %>
	<%= form.hidden_field :news_added_by, value: current_user.id %>

	<div class='actions'>
		<%= form.submit 'Save', class: 'btn btn-success' %>
	</div>
<% end %>