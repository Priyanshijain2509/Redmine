<%= form_with(model: @wiki, url: user_project_wiki_path(
  user_id: current_user.id, project_id: @project.id, id: params[:id]),
  local: true) do |form| %>

  <div class='form-group'>
    <%= form.label :wiki_text %>
    <%= form.rich_text_area :wiki_text, class: 'form-control',
    value: @wiki.wiki_text %>
  </div>
  <br />

  <div>
    <%= form.hidden_field :project_id, value: @project.id %>
    <%= form.hidden_field :created_by, value: @wiki.created_by %>
    <%= form.hidden_field :updated_by, value: current_user.id %>
  </div>

  <div class='actions'>
    <%= form.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>

