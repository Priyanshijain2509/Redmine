<div class='login'>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='field'>
      <%= f.label :login %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'custom-input'
        %>
    </div>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to 'Lost password', new_password_path(resource_name), class: 'lost-password' %><br />
    <% end %>

    <div class='field'>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: 'current-password', class: 'custom-input'
          %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class='field'>
        <%= f.check_box :remember_me %>
        <%= f.label :stay_logged_in %>
      </div>
    <% end %>

    <div class='actions'>
      <%= f.submit 'Login', class: 'custom-input' %>
    </div>
  <% end %>

</div>