<div class="splitcontent">
  <div class="splitcontentleft">
    <fieldset class="box tabular">
      <h2>My account</h2>
      <p class='legend'>Information <% resource_name.to_s.humanize %></p>

      <%= form_for(resource, as: resource_name,  url: user_path(resource), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <p>
          <%= f.label :first_name, class: 'required' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name' %>
        </p>

        <p>
          <%= f.label :last_name, class: 'required'  %>
          <%= f.text_field :last_name, autocomplete: 'last_name' %>
        </p>

        <p>
          <%= f.label :email, class: 'required'  %>
          <%= f.email_field :email, autocomplete: "email" %>
        </p>

        <p>
          <%= f.label :language %>
          <%= f.text_field :language, autocomplete: 'language' %>
        </p>

        <p>
          <%= f.label :nick_name, class: 'required'  %>
          <%= f.text_field :nick_name, autocomplete: 'nick_name' %>
        </p>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <p class="mobile-hide">
          <%= f.submit "Save" %>
        </p>
      <% end %>
    </fieldset>
  </div>

  <div class="splitcontentright">
    <fieldset class="box tabular">
      <legend>Email Notifications</legend>
    </fieldset>
  </div>

</div>


        <h3>Cancel my account</h3>

        <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

        <%= link_to "Back", :back %>
